<%	if user_signed_in?  %>
    <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
<% end %>
<div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
        <div class="panel-body">
            <%= pin.description %>
            <%= pin.user.email if pin.user %>
            
            <% if pin.user == current_user %>
                <%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %>
                <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
            <% end %>
        </div>
      </div>
    <% end %>
</div>