<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:thumb) if pin.image %></td>
        <td><%= pin.description %></td>
        <td><%= pin.user.email if pin.user %></td>
        <td><%= link_to pin.description, pin %></td>
        <% if pin.user == current_user %>
            <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-default" %></td>
            <td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%	if user_signed_in?  %>
<%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
<% end %>